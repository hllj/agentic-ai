# =============================================================================
# Agentic AI Application Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
DATA_DIRECTORY=./data

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=60

# =============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =============================================================================
# Option 1: Use individual connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_ai
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Option 2: Use connection URL (takes precedence over individual params)
# POSTGRES_URL=postgresql://username:password@localhost:5432/agentic_ai

# Connection pool settings
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# =============================================================================
# VECTOR DATABASE (CHROMADB) CONFIGURATION
# =============================================================================
VECTOR_DB_PROVIDER=chroma
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=documents

# Embedding settings
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# MEMORY SYSTEM CONFIGURATION
# =============================================================================
MEMORY_BUFFER_SIZE=10
MEMORY_SUMMARY_MAX_TOKENS=1000
MEMORY_VECTOR_K=5
USE_POSTGRES_MEMORY=true

# =============================================================================
# DATABASE MANAGEMENT
# =============================================================================
AUTO_CREATE_TABLES=true
DROP_TABLES_ON_START=false
ENABLE_MIGRATIONS=true

# =============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production deployments

# SSL Configuration
# POSTGRES_SSL_MODE=require
# POSTGRES_SSL_CERT_PATH=/path/to/client-cert.pem
# POSTGRES_SSL_KEY_PATH=/path/to/client-key.pem
# POSTGRES_SSL_CA_PATH=/path/to/ca-cert.pem

# Security
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_key_here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=8000